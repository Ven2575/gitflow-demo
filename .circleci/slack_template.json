version: '2.1'
orbs:
  slack: circleci/slack@4.1
jobs:
  notify:
    docker:
      - image: 'cimg/base:stable'
    steps:
      - slack/notify:
          custom: |
            {
              "blocks": [
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "plain_text",
                      "text": "Failure Message: Ooops! deployment fail, please go through the pipeline configuration and make require changes! :crying_cat_face:",
                      "emoji": true
                    }
                  ]
                }
              ]
            }
          event: fail
      - slack/notify:
          custom: |
            {
              "blocks": [
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "plain_text",
                      "text": "Success Message: Successfully deployed! :dancing_banana:",
                      "emoji": true
                    }
                  ]
                }
              ]
            }
          event: pass

workflows:
  send-notification:
    jobs:
      - notify:
          context: slack-secrets
