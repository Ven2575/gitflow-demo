steps:
  - slack/notify:
          event: fail
          custom: |
            {
              "blocks": [
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "plain_text",
                      "text": "Failure Message: Ooops! deployment fail, please go through the pipeline configuration and make require changes! :crying_cat_face:",
                      "emoji": true
                    }
                  ]
                }
              ]
            }
  - slack/notify:
          event: pass
          custom: |
            {
              "blocks": [
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "plain_text",
                      "text": "Success Message: Successfully deployed! :dancing_banana:",
                      "emoji": true
                    }
                  ]
                }
              ]
            }
